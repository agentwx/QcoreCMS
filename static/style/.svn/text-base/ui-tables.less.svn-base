.ui-table{
	position: relative;
	border: 1px solid @linColor;
	border-bottom: none;
	border-radius: 2px;
	padding: 1px;
	background: @bgColor;
	.fn-css3 ();


	table{
		width: 100%;
		border-collapse: separate;
		border-spacing: 1;

	}


	tr.old{
		background: @obgColor;
		
	}

	th{
		border-bottom: 1px solid @linColor;
		text-align: left;
		padding: 6px;
	}
	
	td{
		margin: 0;
		margin-bottom: 1px;
		border-top: 1px solid #fff;
		_border-top:none;
		border-bottom: 1px solid @linColor;
		padding: 6px;
	}
}

.ui-table-un{
	position: relative;
	border: none;
	border-radius: 2px;
	padding: 1px;
	background: @bgColor;
	.fn-css3 ();


	table{
		width: 100%;
		border-collapse: separate;
		border-spacing: 1;

	}

	tr{
		background: #fff;
	}

	tr.old{
		background: @bgColor;
		
	}

	th{
		border-bottom: 1px solid @linColor;
		background: @obgColor;
		text-align: left;
		padding: 6px;
	}
	
	td{
		margin: 0;
		margin-bottom: 1px;
		border-top: 1px solid #fff;
		_border-top:none;
		border-bottom: 1px solid @linColor;
		padding: 6px;
	}
}